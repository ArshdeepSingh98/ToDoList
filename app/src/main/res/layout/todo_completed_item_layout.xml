<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_margin="0dp"
            android:background="#F1F8E9"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_ctask"
                android:layout_width="260dp"
                android:layout_height="45dp"
                android:layout_gravity="top"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="#DCEDC8"
                android:hint="Task"
                android:padding="5sp"
                android:textAlignment="textStart"
                android:textColor="#263238"
                android:textSize="28sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_cdate"
                android:layout_width="90dp"
                android:layout_height="24dp"
                android:layout_gravity="top"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="0dp"
                android:background="#C5E1A5"
                android:hint="Due Date"
                android:padding="5sp"
                android:textAlignment="textStart"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_ctask" />

            <TextView
                android:id="@+id/tv_ctime"
                android:layout_width="90dp"
                android:layout_height="24dp"
                android:layout_gravity="top"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="-1dp"
                android:layout_marginTop="0dp"
                android:background="#AED581"
                android:padding="5sp"
                android:textAlignment="textStart"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="@+id/tv_ctask"
                app:layout_constraintLeft_toLeftOf="@+id/tv_cdate"
                app:layout_constraintTop_toBottomOf="@+id/tv_cdate"
                app:layout_constraintVertical_bias="0.0" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>