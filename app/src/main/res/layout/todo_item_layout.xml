<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_margin="0dp"
            android:background="#E8EAF6"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_ctask"
                android:layout_width="213dp"
                android:layout_height="45dp"
                android:layout_gravity="top"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="#E8EAF6"
                android:hint="Task"
                android:padding="5sp"
                android:textAlignment="textStart"
                android:textColor="#263238"
                android:textSize="28sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/b_done"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/button_shape1"
                android:elevation="0dp"
                android:focusable="false"
                android:text="Done"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginRight="1dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="1.0" />

            <TextView
                android:id="@+id/tv_cdate"
                android:layout_width="90dp"
                android:layout_height="24dp"
                android:layout_gravity="top"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="0dp"
                android:background="#C5CAE9"
                android:hint="Due Date"
                android:padding="5sp"
                android:textAlignment="textStart"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintHorizontal_bias="0.82"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_ctask" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="90dp"
                android:layout_height="24dp"
                android:layout_gravity="top"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="-1dp"
                android:layout_marginTop="0dp"
                android:background="#9FA8DA"
                android:padding="5sp"
                android:textAlignment="textStart"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="@+id/tv_ctask"
                app:layout_constraintLeft_toLeftOf="@+id/tv_cdate"
                app:layout_constraintTop_toBottomOf="@+id/tv_cdate"
                app:layout_constraintVertical_bias="0.0" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>